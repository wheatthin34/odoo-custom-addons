<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- Form View (Detail View) -->
	<record id="view_library_book_form" model="ir.ui.view">
		<field name="name">library.book.form</field>
		<field name="model">library.book</field>
		<field name="arch" type="xml">
			<form string="Book">
				<sheet>
					<field name="cover_image" widget="image" class="oe_avatar"/>
					<div class="oe_title">
						<h1>
							<field name="name" placeholder="Book Title"/>
						</h1>
						<div class="o_row">
							<field name="rating" widget="priority"/>
							<span class="text-muted"> Rating</span>
						</div>
					</div>
					<group>
						<group string="Book Information">
							<field name="author"/>
							<field name="isbn"/>
							<field name="publisher"/>
							<field name="publish_date"/>
							<field name="pages"/>
						</group>
						<group string="Status and Pricing">
							<field name="state"/>
							<field name="cost_price"/>
							<field name="rental_price"/>
						</group>
					</group>
					<notebook>
						<page string="Description">
							<field name="description" placeholder="Book description..."/>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<!-- Tree View (List View) -->
	<record id="view_library_book_tree" model="ir.ui.view">
		<field name="name">library.book.tree</field>
		<field name="model">library.book</field>
		<field name="arch" type="xml">
			<tree string="Books">
				<field name="name"/>
				<field name="author"/>
				<field name="isbn"/>
				<field name="rating" widget="priority"/>
				<field name="state"/>
				<field name="rental_price"/>
			</tree>
		</field>
	</record>

	<!-- Search View -->
	<record id="view_library_book_search" model="ir.ui.view">
		<field name="name">library.book.search</field>
		<field name="model">library.book</field>
		<field name="arch" type="xml">
			<search string="Search Books">
				<field name="name"/>
				<field name="author"/>
				<field name="isbn"/>
				<filter string="Available" name="available"
                        domain="[('state', '=', 'available')]"/>
				<filter string="Borrowed" name="borrowed"
                        domain="[('state', '=', 'borrowed')]"/>
				<group string="Group By">
					<filter name="group_by_author" string="Author"
                            context="{'group_by': 'author'}"/>
					<filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
				</group>
			</search>
		</field>
	</record>

	<!-- Action (Opens the views) -->
	<record id="action_library_book" model="ir.actions.act_window">
		<field name="name">Books</field>
		<field name="res_model">library.book</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				Create your first book!
			</p>
			<p>
				Click the create button to add a new book to your library.
			</p>
		</field>
	</record>

</odoo>
