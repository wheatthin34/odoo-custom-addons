<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- Member Form View -->
	<record id="view_library_member_form" model="ir.ui.view">
		<field name="name">library.member.form</field>
		<field name="model">library.member</field>
		<field name="arch" type="xml">
			<form string="Library Member">
				<!-- Status Bar -->
				<header>
					<button name="action_activate" string="Activate"
                            type="object" class="oe_highlight"
                            invisible="status == 'active'"/>
					<button name="action_suspend" string="Suspend"
                            type="object"
                            invisible="status == 'suspended'"/>
					<button name="action_mark_expired" string="Mark as Expired"
                            type="object"
                            invisible="status == 'expired'"/>
					<field name="status" widget="statusbar"
                           statusbar_visible="active,suspended,expired"/>
				</header>

				<sheet>
					<!-- Photo and Title -->
					<field name="photo" widget="image" class="oe_avatar"/>
					<div class="oe_title">
						<label for="name" class="oe_edit_only"/>
						<h1>
							<field name="name" placeholder="Member Name"/>
						</h1>
						<h3>
							<field name="membership_number" readonly="1"/>
						</h3>
					</div>

					<!-- Information Groups -->
					<group>
						<group string="Contact Information">
							<field name="email" widget="email"/>
							<field name="phone" widget="phone"/>
							<field name="mobile" widget="phone"/>
							<field name="address"/>
						</group>
						<group string="Membership Information">
							<field name="joined_date"/>
							<field name="expiry_date"/>
							<field name="membership_days_left"
                                   invisible="not expiry_date"/>
							<field name="is_expired" invisible="1"/>
						</group>
					</group>

					<!-- Notes Tab -->
					<notebook>
						<page string="Internal Notes">
							<field name="notes" placeholder="Add internal notes about this member..."/>
						</page>
					</notebook>
				</sheet>

				<!-- Chatter -->
				<div class="oe_chatter">
					<field name="message_follower_ids"/>
					<field name="activity_ids"/>
					<field name="message_ids"/>
				</div>
			</form>
		</field>
	</record>

	<!-- Member Tree View -->
	<record id="view_library_member_tree" model="ir.ui.view">
		<field name="name">library.member.tree</field>
		<field name="model">library.member</field>
		<field name="arch" type="xml">
			<tree string="Library Members">
				<field name="membership_number"/>
				<field name="name"/>
				<field name="email"/>
				<field name="phone"/>
				<field name="mobile"/>
				<field name="status" widget="badge"
                       decoration-success="status == 'active'"
                       decoration-warning="status == 'suspended'"
                       decoration-danger="status == 'expired'"/>
				<field name="joined_date"/>
				<field name="expiry_date"/>
			</tree>
		</field>
	</record>

	<!-- Member Kanban View (Card View) -->
	<record id="view_library_member_kanban" model="ir.ui.view">
		<field name="name">library.member.kanban</field>
		<field name="model">library.member</field>
		<field name="arch" type="xml">
			<kanban>
				<field name="id"/>
				<field name="name"/>
				<field name="email"/>
				<field name="phone"/>
				<field name="membership_number"/>
				<field name="status"/>
				<field name="photo"/>
				<templates>
					<t t-name="kanban-box">
						<div class="oe_kanban_global_click">
							<div class="o_kanban_image">
								<img t-att-src="kanban_image('library.member', 'photo', record.id.raw_value)"
                                     alt="Member Photo" class="o_image_64_cover"/>
							</div>
							<div class="oe_kanban_details">
								<strong class="o_kanban_record_title">
									<field name="name"/>
								</strong>
								<div class="o_kanban_record_subtitle">
									<field name="membership_number"/>
								</div>
								<div>
									<i class="fa fa-envelope"/>
									<field name="email"/>
								</div>
								<div t-if="record.phone.raw_value">
									<i class="fa fa-phone"/>
									<field name="phone"/>
								</div>
								<div class="oe_kanban_footer">
									<field name="status" widget="label"
                                           decoration-success="status == 'active'"
                                           decoration-warning="status == 'suspended'"
                                           decoration-danger="status == 'expired'"/>
								</div>
							</div>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>

	<!-- Member Search View -->
	<record id="view_library_member_search" model="ir.ui.view">
		<field name="name">library.member.search</field>
		<field name="model">library.member</field>
		<field name="arch" type="xml">
			<search string="Search Members">
				<!-- Search Fields -->
				<field name="name"/>
				<field name="membership_number"/>
				<field name="email"/>
				<field name="phone"/>
				<field name="mobile"/>

				<!-- Filters -->
				<filter string="Active Members" name="active"
                        domain="[('status', '=', 'active')]"/>
				<filter string="Suspended Members" name="suspended"
                        domain="[('status', '=', 'suspended')]"/>
				<filter string="Expired Members" name="expired"
                        domain="[('status', '=', 'expired')]"/>

				<separator/>
				<filter string="Expiring Soon" name="expiring_soon"
                        domain="[('membership_days_left', '&lt;=', 30), ('membership_days_left', '&gt;', 0)]"
                        help="Members with less than 30 days until expiry"/>
				<filter string="Already Expired" name="already_expired"
                        domain="[('is_expired', '=', True)]"/>

				<separator/>
				<filter string="Archived" name="inactive"
                        domain="[('active', '=', False)]"/>

				<!-- Group By -->
				<group string="Group By">
					<filter name="group_by_status" string="Status"
                            context="{'group_by': 'status'}"/>
					<filter name="group_by_joined_month" string="Joined Month"
                            context="{'group_by': 'joined_date'}"/>
				</group>
			</search>
		</field>
	</record>

	<!-- Member Action (Window Action) -->
	<record id="action_library_member" model="ir.actions.act_window">
		<field name="name">Library Members</field>
		<field name="res_model">library.member</field>
		<field name="view_mode">kanban,tree,form</field>
		<field name="context">{'search_default_active': 1}</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				Create your first library member
			</p>
			<p>
				Register library members to track borrowing and manage memberships.
			</p>
		</field>
	</record>

</odoo>